# Application Environment
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ragdrivedb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ragdrivedb

# Authentication
SESSION_SECRET=change-this-to-a-long-random-string

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_COMPLETION_MODEL=gpt-4-turbo

# Slack Integration (Optional)
SLACK_API_TOKEN=your-slack-api-token
SLACK_CHANNEL=alerts

# FTP Server Configuration
FTP_USER=ftpuser
FTP_PASSWORD=change-this-to-a-secure-password
FTP_PORT=21
FTP_PASSIVE_PORT_RANGE=30000-30009

# SSL Certificate Paths
SSL_CERT_PATH=./ftp-cert.pem
SSL_KEY_PATH=./ftp-private.key

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# Performance Settings
MAX_UPLOAD_SIZE=100mb
DB_CONNECTION_POOL_SIZE=10
QUERY_CACHE_DURATION=3600

# Feature Toggles
ENABLE_RAG_PROCESSING=true
ENABLE_SLACK_NOTIFICATIONS=false
ENABLE_FTP_SERVER=true